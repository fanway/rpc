}

double *
pi_1_svc(argp, rqstp)
	double *argp;
	struct svc_req *rqstp;
{

	static double result = 0;

	double eps = 1e-14;
	double n=1;
    double a=-1;
	while (1)
    {
        a=a*(-1/n);
        if (fabs(a) <= eps) break;
        result=result+a;
